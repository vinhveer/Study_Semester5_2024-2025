@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap UX Form Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        label {
            font-weight: 600;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <h3 class="display-6">Đăng ký thành viên</h3>

        <ul class="nav nav-tabs mt-4">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Đăng ký</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Danh sách</a>
            </li>
        </ul>

        <p class="mt-4">Vui lòng hoàn thành các thông tin sau</p>

        <p>@ViewBag.message</p>

        <form class="text-start" action="~/NhanVien_64132989/Index" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4 mb-2">
                    <label for="id" class="form-label">Mã số nhân viên</label>
                    <input type="text" class="form-control" id="id" name="id" placeholder="Nhập mã số" />
                </div>
                <div class="col-md-6 mb-2">
                    <label for="fullName" class="form-label">Họ tên</label>
                    <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Nhập họ tên" />
                </div>
                <div class="col-md-2 mb-2">
                    <label for="dateOfBirth" class="form-label">Ngày sinh</label>
                    <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-2">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email công ty" />
                    <div class="form-text">Email phải có định dạng đúng, ví dụ: name@company.com</div>
                </div>
                <div class="col-md-6 mb-2">
                    <label for="password" class="form-label">Mật khẩu</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" />
                    <div class="form-text">Mật khẩu phải có ít nhất 8 ký tự.</div>
                </div>
            </div>

            <div class="row">
                <!-- Mật khẩu và Phòng ban -->
                <div class="col-md-3 mb-2">
                    <label for="department" class="form-label">Phòng ban</label>
                    <select class="form-select" id="department" name="department">
                        <option selected>Chọn phòng ban</option>
                        <option value="1">Kinh doanh</option>
                        <option value="2">Kỹ thuật</option>
                        <option value="3">Nhân sự</option>
                    </select>
                </div>
                <div class="col-md-3 mb-2">
                    <label for="position" class="form-label">Chức vụ</label>
                    <select class="form-select" id="position" name="position">
                        <option selected>Chọn chức vụ</option>
                        <option value="1">Nhân viên</option>
                        <option value="2">Trưởng phòng</option>
                        <option value="3">Giám đốc</option>
                    </select>
                </div>
                <div class="col-md-6 mb-2">
                    <label for="avatar" class="form-label">Ảnh đại diện</label>
                    <input type="file" class="form-control" id="avatar" name="avatar" />
                </div>
            </div>

            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary">Đăng ký</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>
