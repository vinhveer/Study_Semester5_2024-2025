@model IEnumerable<BaiTap6_64132989.Models.PhongBan>

@{
    ViewBag.Title = "Danh sách phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="title">Danh sách phòng ban</h3>

<div class="mt-3 mb-3">
    <a href="@Url.Action("Create")" class="btn btn-outline-success">
        <i class="fas fa-plus me-2"></i> Thêm phòng ban mới
    </a>
</div>

<!-- Điều hướng phân trang -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0">Hiển thị @ViewBag.CurrentRecords phòng ban trên tổng số @ViewBag.TotalRecords phòng ban</p>
    <nav aria-label="Page navigation">
        <ul class="pagination mb-0">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })">Trang trước</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })">Trang tiếp theo</a>
            </li>
        </ul>
    </nav>
</div>

<table class="table table-border table-striped align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>@Html.DisplayNameFor(model => model.First().TenPhongBan)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaPhongBan</td>
                <td>@Html.DisplayFor(modelItem => item.TenPhongBan)</td>
                <td>
                    @Html.ActionLink("Đổi tên", "Edit", new { id = item.MaPhongBan }, new { @class = "btn btn-outline-secondary" }) |
                    <a href="@Url.Action("Delete", "PhongBans_64132989", new { id = item.MaPhongBan })" class="btn btn-outline-danger" title="Xóa">Xoá phòng ban này</a>
                </td>
            </tr>
        }
    </tbody>
</table>
