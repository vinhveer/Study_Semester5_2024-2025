@model IEnumerable<BaiTap6_64132989.Models.NhanVien>

@{
    ViewBag.Title = "Tìm kiếm nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="title">Tìm kiếm nhân viên</h3>

<!-- Form tìm kiếm -->
<form method="get" action="@Url.Action("TimKiem", "NhanViens")" class="mb-4">
    <div class="row mb-3">
        <div class="col-md-3">
            <label for="maNV" class="form-label">Mã nhân viên</label>
            <input type="text" class="form-control" id="maNV" name="maNV" value="@Request.QueryString["maNV"]">
        </div>
        <div class="col-md-3">
            <label for="hoTen" class="form-label">Họ tên</label>
            <input type="text" class="form-control" id="hoTen" name="hoTen" value="@Request.QueryString["hoTen"]">
        </div>
        <div class="col-md-3">
            <label for="gioiTinh" class="form-label">Giới tính</label>
            <select class="form-select" id="gioiTinh" name="gioiTinh">
                <option value="">Tất cả</option>
                <option value="true" @(Request.QueryString["gioiTinh"] == "true" ? "selected" : "")>Nam</option>
                <option value="false" @(Request.QueryString["gioiTinh"] == "false" ? "selected" : "")>Nữ</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="maPhongBan" class="form-label">Phòng ban</label>
            @Html.DropDownList("maPhongBan", ViewBag.MaPhongBan as SelectList, "Tất cả", new { @class = "form-select" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <label for="luongTu" class="form-label">Lương từ</label>
            <input type="number" step="0.01" class="form-control" id="luongTu" name="luongTu" value="@Request.QueryString["luongTu"]">
        </div>
        <div class="col-md-3">
            <label for="luongDen" class="form-label">Lương đến</label>
            <input type="number" step="0.01" class="form-control" id="luongDen" name="luongDen" value="@Request.QueryString["luongDen"]">
        </div>
        <div class="col-md-6">
            <label for="diaChi" class="form-label">Địa chỉ</label>
            <input type="text" class="form-control" id="diaChi" name="diaChi" value="@Request.QueryString["diaChi"]">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>

<!-- Kết quả tìm kiếm -->
<table class="table table-bordered table-striped align-middle">
    <thead>
        <tr>
            <th>Mã NV</th>
            <th>Họ</th>
            <th>Tên</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Lương</th>
            <th>Địa chỉ</th>
            <th>Phòng ban</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNV</td>
                <td>@item.HoNV</td>
                <td>@item.TenNV</td>
                <td>@(item.GioiTinh ? "Nam" : "Nữ")</td>
                <td>@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                <td>@item.Luong</td>
                <td>@item.DiaChi</td>
                <td>@item.PhongBan.TenPhongBan</td>
                <td>
                    <a href="@Url.Action("Edit", "NhanViens", new { id = item.MaNV })" class="btn btn-secondary btn-sm">Sửa</a>
                    <a href="@Url.Action("Details", "NhanViens", new { id = item.MaNV })" class="btn btn-info btn-sm">Xem</a>
                    <a href="@Url.Action("Delete", "NhanViens", new { id = item.MaNV })" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Điều hướng phân trang -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0">Hiển thị @ViewBag.CurrentRecords trên tổng số @ViewBag.TotalRecords nhân viên</p>
    <nav aria-label="Page navigation">
        <ul class="pagination mb-0">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("TimKiem", new { page = ViewBag.CurrentPage - 1 })">Trang trước</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("TimKiem", new { page = i })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("TimKiem", new { page = ViewBag.CurrentPage + 1 })">Trang tiếp theo</a>
            </li>
        </ul>
    </nav>
</div>
