@model BaiTap6_64132989.Models.PhongBan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3 mb-2">
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Trở về danh sách
    </a>
</div>

<h3 class="mt-4">Đổi tên Phòng ban</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mt-3">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaPhongBan)

        <div class="mb-3">
            @Html.LabelFor(model => model.TenPhongBan, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.TenPhongBan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenPhongBan, "", new { @class = "text-danger" })
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
