@model ThiGK64CNTT3_64132989_De1.Models.ThanhVien

@{
    ViewBag.Title = "Thêm thành viên mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="display-6">Thêm thành viên mới</h2>
<div>
    @Html.ActionLink("Về trang danh sách", "Index", null, new { @class = "btn btn-outline-secondary mt-2" })
</div>

@using (Html.BeginForm("Create", "ThanhViens64132989", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-md-10 mt-5">
        @Html.LabelFor(model => model.MaTV, htmlAttributes: new { @class = "form-label col-md-2" })
        @Html.EditorFor(model => model.MaTV, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã thành viên" } })
        @Html.ValidationMessageFor(model => model.MaTV, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 mt-3">
        @Html.LabelFor(model => model.HoTV, htmlAttributes: new { @class = "form-label col-md-2" })
        @Html.EditorFor(model => model.HoTV, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập họ thành viên" } })
        @Html.ValidationMessageFor(model => model.HoTV, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 mt-3">
        @Html.LabelFor(model => model.TenTV, htmlAttributes: new { @class = "form-label col-md-2" })
        @Html.EditorFor(model => model.TenTV, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên thành viên" } })
        @Html.ValidationMessageFor(model => model.TenTV, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 mt-3">
        @Html.LabelFor(model => model.AnhDaiDien, htmlAttributes: new { @class = "form-label col-md-2" })
        @Html.EditorFor(model => model.AnhDaiDien, new { htmlAttributes = new { @class = "form-control", @type = "file", @name = "AnhDaiDien" } })
        @Html.ValidationMessageFor(model => model.AnhDaiDien, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 mt-3">
        @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "form-label col-md-2" })
        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", type = "date" } })
        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 mt-3">
        @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "form-label col-md-2" })
        <div class="form-check form-check-inline">
            @Html.RadioButtonFor(model => model.GioiTinh, true, new { @class = "form-check-input", id = "gioiTinhNam" })
            <label class="form-check-label" for="gioiTinhNam">Nam</label>
        </div>
        <div class="form-check form-check-inline">
            @Html.RadioButtonFor(model => model.GioiTinh, false, new { @class = "form-check-input", id = "gioiTinhNu" })
            <label class="form-check-label" for="gioiTinhNu">Nữ</label>
        </div>
        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 mt-3">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label col-md-2" })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 mt-3">
        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "form-label col-md-2" })
        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ" } })
        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 mt-3">
        @Html.LabelFor(model => model.MaTinh, "Tỉnh/Thành phố", htmlAttributes: new { @class = "form-label col-md-2" })
        @Html.DropDownListFor(model => model.MaTinh, ViewBag.MaTinh as SelectList, "Chọn tỉnh/thành phố", new { @class = "form-select" })
        @Html.ValidationMessageFor(model => model.MaTinh, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-offset-2 col-md-10 mt-5">
        <input type="submit" value="Lưu thông tin" class="btn btn-primary" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
