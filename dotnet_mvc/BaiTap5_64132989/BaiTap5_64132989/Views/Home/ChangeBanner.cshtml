@{
    ViewBag.Title = "Thay đổi banner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h3 class="display-6">Thay đổi banner</h3>
    <hr />

    @using (Html.BeginForm("ChangeBanner", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group mb-3">
            <label for="banner" class="form-label">Chọn ảnh làm banner:</label>
            <input type="file" class="form-control" id="banner" name="banner" accept="image/*" required />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Thay đổi</button>
        </div>

        if (ViewBag.Message != null)
        {
            <div class="alert alert-success mt-3" role="alert">
                @ViewBag.Message
            </div>
        }

        if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3" role="alert">
                @ViewBag.Error
            </div>
        }
    }
</div>
