@model BaiTap4_64132989.Models.MailInfo

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gửi email</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <h3 class="display-6 mb-4">Gửi email</h3>

        @* Hiển thị thông báo nếu có *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "row g-3" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "form-control w-50", placeholder = "Your email" } })
                @Html.ValidationMessageFor(model => model.From, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control mt-2 w-50", placeholder = "Your password", type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control", placeholder = "Recipient's email" } })
                @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })
            </div>

            <div class="mb-0">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", placeholder = "Email subject" } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.TextAreaFor(model => model.Body, new { @class = "form-control", rows = 6, placeholder = "Email body" })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>

            <div class="mt-3 mb-5">
                <button type="submit" class="btn btn-primary">Gửi Email</button>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
