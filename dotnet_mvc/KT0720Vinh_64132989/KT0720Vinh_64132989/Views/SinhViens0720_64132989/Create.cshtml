@model KT0720Vinh_64132989.Models.SinhVien

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3 mb-2">
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Trở về danh sách
    </a>
</div>

<h3 class="mb-2 mt-3">Thêm nhân viên mới</h3>

@using (Html.BeginForm("Create", "NhanViens", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-8">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



            <div class="row mt-3">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.HoSV, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.HoSV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoSV, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-8">
                    @Html.LabelFor(model => model.TenSV, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.TenSV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenSV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.GioiTinh,
                        new SelectList(new[]
                        {
                            new { Value = "false", Text = "Nữ" },
                            new { Value = "true", Text = "Nam" }
                        }, "Value", "Text"),
                        htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(model => model.MaLop, "Lớp", htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("MaLop", null, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.MaLop, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-12 mt-3">
                @Html.LabelFor(model => model.AnhSV, htmlAttributes: new { @class = "form-label" })
                <input type="file" name="AnhNV" id="AnhNV" class="form-control" />
                @Html.ValidationMessageFor(model => model.AnhSV, "", new { @class = "text-danger" })
            </div>

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i> Tạo mới
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
